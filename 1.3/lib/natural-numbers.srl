# binary natural-numbers

@import("std.srl").

equals
(
	is-digit(?a),
	or
	(
		equals(?a 0),
		equals(?a 1)
	)
).

equals
(
	is-number(?a),
	or
	(
		and
		(
			and
			(
				is-digit(!d),
				is-number(!n)
			),
			equals
			(
				?a,
				next-to(!d !n)
			)
		),
		is-digit(?a)
	)
).

implies
(
	is-number(?a),
	equals
	(
		plus(?a 0),
		?a
	)
).

implies
(
	and
	(
		is-number(?a),
		is-number(?b)
	),
	equals
	(
		plus(?a ?b),
		plus(?b ?a)
	)
)
